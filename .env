# ✅ Bypass dependency tree check (use with caution)
SKIP_PREFLIGHT_CHECK=true

# 🌍 Base URL for your backend API
REACT_APP_API_BASE_URL=https://api.example.com

# 🔐 API keys (never commit this file to public repos)
REACT_APP_MAPBOX_TOKEN=your-mapbox-token-here
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key-here

# 🧭 Environment mode
REACT_APP_ENV=development

# 🧪 Feature flags
REACT_APP_ENABLE_EXPERIMENTAL_UI=false
REACT_APP_USE_MOCK_DATA=true

# 📦 Tailwind or PostCSS-specific flags (if needed)
REACT_APP_TAILWIND_MODE=watch

# 🕵️‍♂️ Debugging
REACT_APP_DEBUG=true

# 🛠 Enables legacy OpenSSL support for Webpack hashing in Node.js v17+
# Required to avoid ERR_OSSL_EVP_UNSUPPORTED errors during development
NODE_OPTIONS=--openssl-legacy-provider
